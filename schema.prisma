datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Post {
  id          String    @id @default(cuid())
  title       String?
  status      String?
  content     String?
  publishDate DateTime?
  author      Author?   @relation("Post_author", fields: [authorId], references: [id])
  authorId    String?   @map("author")

  @@index([authorId])
}

model Author {
  id    String  @id @default(cuid())
  name  String?
  email String? @unique
  posts Post[]  @relation("Post_author")
}

model Resource {
  id          String   @id @default(cuid())
  key         String?  @unique
  value       String?
  isMultiline Boolean?
  maxLength   Int?
  pages       Page?    @relation("Resource_pages", fields: [pagesId], references: [id])
  pagesId     String?  @map("pages")

  @@index([pagesId])
}

model Page {
  id          String     @id @default(cuid())
  name        String?
  url         String?    @unique
  description String?
  resources   Resource[] @relation("Resource_pages")
}